
<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded shadow">
	<h1 class="text-2xl font-bold mb-6 text-center">Реєстрація</h1>

	<% if (error) { %>
		<div class="mb-4 text-red-600 font-semibold"><%= error %></div>
	<% } %>

	<form action="/users/register" method="POST" class="space-y-4">
		<div>
			<label class="block mb-1 font-medium" for="name">Ім’я</label>
			<input type="text" name="name" id="name" required class="w-full border px-3 py-2 rounded" />
		</div>
		<div>
			<label class="block mb-1 font-medium" for="email">Email</label>
			<input type="email" name="email" id="email" required class="w-full border px-3 py-2 rounded" />
		</div>
		<div>
			<label class="block mb-1 font-medium" for="password">Пароль</label>
			<input type="password" name="password" id="password" required class="w-full border px-3 py-2 rounded" />
		</div>
		<div>
			<label class="block mb-1 font-medium" for="role">Роль</label>
			<select name="role" id="role" required class="w-full border px-3 py-2 rounded">
				<option value="">Оберіть роль</option>
				<option value="driver">Водій</option>
				<option value="passenger">Попутник</option>
			</select>
		</div>
		<button type="submit" class="w-full bg-green-500 text-white py-2 rounded hover:bg-green-600 transition">
			Зареєструватися
		</button>
	</form>

	<p class="mt-4 text-center">
		Вже маєте акаунт?
		<a href="/login" class="text-blue-500 underline">Увійти</a>
	</p>
</div>

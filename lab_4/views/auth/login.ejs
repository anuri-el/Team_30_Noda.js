<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded shadow">
	<h1 class="text-2xl font-bold mb-6 text-center">Вхід</h1>

	<% if (error) { %>
		<div class="mb-4 text-red-600 font-semibold">
			<%= error %>
		</div>

		<% } %>

			<form action="/login" method="POST" class="space-y-4">
				<div>
					<label class="block mb-1 font-medium" for="email">Email</label>
					<input type="email" name="email" id="email" required class="w-full border px-3 py-2 rounded" />
				</div>
				<div>
					<label class="block mb-1 font-medium" for="password">Пароль</label>
					<input type="password" name="password" id="password" required
						class="w-full border px-3 py-2 rounded" />
				</div>
				<button type="submit" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 transition">
					Увійти
				</button>
			</form>

			<p class="mt-4 text-center">
				Не маєте акаунта?
				<a href="/register" class="text-blue-500 underline">Зареєструватися</a>
			</p>
</div>
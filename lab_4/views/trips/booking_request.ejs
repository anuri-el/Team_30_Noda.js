<div class="max-w-3xl mx-auto p-4 flex flex-col gap-4 text-base text-slate-800">
	<h1 class="text-2xl font-bold text-blue-900">Trip Details</h1>

	<div class="bg-white border border-slate-200 rounded-xl shadow-sm p-4 flex flex-col gap-3">
		<div class="flex justify-between">
			<span class="font-medium text-slate-600">Trip Title:</span>
			<span class="font-semibold">
				<%= trip.title %>
			</span>
		</div>

		<div class="flex justify-between">
			<span class="font-medium text-slate-600">From:</span>
			<span>
				<%= trip.from %>
			</span>
		</div>

		<div class="flex justify-between">
			<span class="font-medium text-slate-600">To:</span>
			<span>
				<%= trip.to %>
			</span>
		</div>

		<div class="flex justify-between">
			<span class="font-medium text-slate-600">Date:</span>
			<span>
				<%= trip.date %>
			</span>
		</div>

		<div class="flex justify-between">
			<span class="font-medium text-slate-600">Available Seats:</span>
			<span>
				<%= trip.seats %>
			</span>
		</div>

		<div class="flex justify-between">
			<span class="font-medium text-slate-600">Driver ID:</span>
			<span>
				<%= trip.driverId %>
			</span>
		</div>
	</div>
</div>


<div class="flex flex-col px-2 max-w-3xl mx-auto">
	<h1 class="text-xl font-bold text-blue-900 my-4">Booking Request</h1>

	<form method="POST" action="/trips/<%= trip.id %>/book"
		class="flex flex-col gap-4 bg-white rounded-lg p-6 shadow-md border border-slate-200">
		<div>
			<label class="block mb-1 font-medium text-sm text-gray-700" for="fullName">Full Name</label>
			<input type="text" id="fullName" name="fullName" required
				class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
				value="<%= user?.fullName || '' %>">
		</div>

		<div>
			<label class="block mb-1 font-medium text-sm text-gray-700" for="email">Email</label>
			<input type="email" id="email" name="email" required
				class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
				value="<%= user?.email || '' %>">
		</div>

		<div>
			<label class="block mb-1 font-medium text-sm text-gray-700" for="seatsRequested">Seats Requested</label>
			<input type="number" id="seatsRequested" name="seatsRequested" min="1" max="<%= trip.availableSeats %>"
				required class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
				value="1">
			<p class="text-xs text-gray-500 mt-1">Available: <%= trip.availableSeats %> seat(s)</p>
		</div>

		<div>
			<label class="block mb-1 font-medium text-sm text-gray-700" for="notes">Notes (optional)</label>
			<textarea id="notes" name="notes" rows="3"
				class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400"
				placeholder="Any specific requests or comments..."></textarea>
		</div>

		<div class="flex justify-between mt-4">
			<a href="/trips"
				class="px-4 py-2 rounded-md bg-slate-300 text-slate-800 hover:bg-slate-400 transition-colors">Cancel</a>
			<button type="submit"
				class="px-6 py-2 rounded-md bg-blue-500 text-white hover:bg-blue-600 transition-colors">Submit
				Request</button>
		</div>
	</form>
</div>
<div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">Редагувати поїздку</h1>

    <form action="/trips/<%= trip.id %>/edit" method="POST" class="space-y-4">
        <label class="block">
            <span class="text-gray-700">Звідки:</span>
            <input type="text" name="from" value="<%= trip.from %>" required
                   class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        </label>
        <label class="block">
            <span class="text-gray-700">Куди:</span>
            <input type="text" name="to" value="<%= trip.to %>" required
                   class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        </label>
        <label class="block">
            <span class="text-gray-700">Дата:</span>
            <input type="date" name="date" value="<%= trip.date %>" required
                   class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        </label>
        <label class="block">
            <span class="text-gray-700">Кількість місць:</span>
            <input type="number" name="seats" value="<%= trip.seats %>" required
                   class="mt-1 block w-full border border-gray-300 rounded px-3 py-2" />
        </label>
        <button type="submit"
                class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Зберегти зміни</button>
    </form>
</div>